	inst myResArray : resistor[7:0] is
		// (overridable) attribute assignments
		VALUE(2) = "2.2K";
		VALUE(3) = "2.5K";
		TOLERANCE = "5%";
	begin
		// pin assignments
		a[2:1] = mynet1(0) & mynet1[2:1];
		a(3) = mynet1(0);
		b = open;
	end;
	
