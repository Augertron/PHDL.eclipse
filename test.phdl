// the design declaration
design myDesign is
	
	// a device declaration
	device opamp_dual is
		// attribute list
		REFPREFIX = "U";
		NAME = "opamp1";
		VALUE = "NE5532";
		PACKAGE = "SOIC_8";
	begin
		// pin list
		in[1:2] +input = "3,5";
		in[1:2] -input = "2,6";
		out[1:2] output = "1,7";
