design myDesign is	
	
	// another device declaration
	device resistor is
		attr refprefix = "R";
		attr name = "";
		attr value = "10K";
		attr package = "R0207";
		attr tolerance = "10%";

		passive a = {1};
		passive b = {2};
	end;

begin
	
	inst resArray : resistor[7:0] is
		// (overridable) attribute assignments
		//value{7,6,5} = "2.2K";
		//value[4:0] = "2.5K";
		tolerance{0,1,2} = "5%";
		refDes(4) = "R1";
		refDes{1} = "R2";
		value = "20K";
	begin
		// pin assignments
		a[2:1] = mynet1(0) & mynet2(0);
		a(0) = mynet1(0);
		b(0) = open;
	end;
	
	inst resArray : resistor is
		value = "2.5K";
	begin
	end;
	
end;
