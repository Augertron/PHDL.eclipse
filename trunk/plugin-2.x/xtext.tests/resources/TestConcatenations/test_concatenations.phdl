device scalar {
	attr REFPREFIX = "S";
	attr FOOTPRINT = "footprint";
	attr LIBRARY = "library";
	pin a = {1};
}

device vector {
	attr REFPREFIX = "S";
	attr FOOTPRINT = "footprint";
	attr LIBRARY = "library";
	pin[4:1] b = {4,3,2,1};
}

design top {

	net a;
	net[4:1] b;
	
	// test invalid msb
	inst test1 of vector {
		b = b[5:2];
	}
	
	// test invalid lsb
	inst test2 of vector {
		b = b[4:0];
	}
	
	// test invalid index
	inst test3 of vector {
		b = b[4,0,2];
	}
	
	// test array not declared
	inst test4 of scalar {
		a = a[0];
	}
	
	// test replications
}